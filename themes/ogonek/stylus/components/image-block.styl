.ps-thumbs
    position relative
    display block
    box-sizing border-box
    width 100%
    padding 0 2rem
    
    &__list
        white-space nowrap
                
    &__list-track
        display block
        overflow hidden
    
    &__link
        display inline-block
        font-size 0
        width 23%
        margin 0 1%
        background-color #ccc
        box-shadow 1px 1px 3px 0 rgba(#000, .33)
        transition .4s transform ease
        transform scale(1)
        
        &:hover
            transform scale(1.1)
        
    &__image
        display block
        size 100% auto
        
    &__button
        absolute top 50% width 2rem height 2rem
        text-align center
        vertical-align middle
        font-size 1rem
        line-height 1
        background-color #222
        border solid 1px #fff
        color #fff
        outline none
        border-radius 50%
        margin -1rem 0 0
        box-shadow 1px 1px 3px 0 rgba(#000, .33)
        transition .4s all ease
        
        &:hover
            background-color #444
        
        &--prev
            left 0
        &--next
            right 0

.ps-image-block
    display block
    
    &__image
        display block
        width 100%
        
    &__image-zoom
        position relative
        display block
        font 6rem/1 "FontAwesome"
    
        &::after
            content "\f00e"
            display block
            box-sizing border-box
            absolute top 0 left 0 width 100% height 100%
            line-height 0
            padding 50% 0
            text-align center
            background-color rgba(#000, .2)
            color #fff
            transition .5s opacity ease
            opacity 0
            
        &:hover::after
            opacity 1
