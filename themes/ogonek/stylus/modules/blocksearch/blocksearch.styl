$color-1 = #666
$color-2 = #fff
$color-3 = #bbb
$color-4 = #fbfbfb
$color-5 = #646464
$color-6 = rgba(0,0,0,0.10)
$color-7 = #d6d4d4
$color-8 = #686666

#search_block_top
    padding 12px 35px 12px 0px
    float right

    #searchbox
        float left
        width 100%

    .btn
        &.button-search
            background $color-1
            display block
            position absolute
            top 0
            right 0
            border none
            color $color-2
            width 50px
            text-align center
            padding 3px 0
            border-radius 0 15px 15px 0

            span
                display none

            &:before
                content "\f002"
                display block
                font-family "FontAwesome"
                font-size 17px
                width 100%
                text-align center

            &:hover
                color $color-3

    #search_query_top
        display inline
        padding 13px 60px 13px 13px
        height 45px
        background $color-4
        margin-right 50px
        height 30px
        width 210px
        float right
        padding 0 15px
        background $color-2
        border-radius 15px 0 0 15px
        border none
        color $color-5
        box-shadow inset 0 2px 3px $color-6

.ac_results
    width 271px
    z-index 9999

    &::before, &::after
        content ''
        position absolute
        display inline-block
    
    &::before
        top 7px
        left 19px
        border-right 9px solid transparent
        border-bottom 9px solid #ccc
        border-left 9px solid transparent
        border-bottom-color #e6e6e6
    
    &::after
        top 5px
        left 20px
        border-right 8px solid transparent
        border-bottom 8px solid #fff
        border-left 8px solid transparent
    
    &__block
        clear both
        
        &::after
            content ''
            clear both
            display table
    
    &__image
        width 32px
        vertical-align top
        margin 0 10px 0 0
        float left
        
    &__value
        display block
        margin 0 0 0 42px
    
    ul
        position relative
        display block
        background $color-2
        border none
        box-shadow 0px 0px 10px 0px #d0d0d0
        margin 15px 0 0
        padding 0
        border-radius 5px
        
    li
        display block
        box-sizing border-box
        padding 5px 10px
        font-weight normal
        color $color-8
        font-size 12px
        line-height 16px
        min-height 42px
        cursor pointer
        
        &:first-child, &:last-child
            padding 10px

        &.ac_odd
            background rgba(253, 167, 2, 0.1)

.ac_results li:hover
.ac_results li.ac_over
    background rgba(253, 167, 2, 0.2)

form
    &#searchbox
        position relative

        label
            color $color-1

        input
            &#search_query_block
                margin-right 10px
                max-width 222px
                margin-bottom 10px
                display inline-block
                float left

        .button
            &.button-small
                float left

                i
                    margin-right 0
