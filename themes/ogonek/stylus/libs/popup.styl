$popup($width = 920px)
    $left-offset = $width / -2
    absolute top 10% left 50% width $width
    background-color #fff
    border-radius 10px
    padding 20px
    margin 0 0 0 $left-offset
    min-height 600px
    
    .hidden &
        display none
        
    &__close
        display block
        absolute top 0 right -8px
        font-size 36px
        background none
        border none
        outline none
        
        &::after
            content '\f057'
            font-family: 'FontAwesome'
            color #222
            
        &:hover::after
            color #666
        
    
    &__overlay
        fixed top 0 left 0 width 100% height 100%
        background-color rgba(#000, .4)
        z-index 6000
        
        &.hidden
            display none