.ps-popup-content__ajax
    width 920px
    .ps-popup-content
        min-width 900px
        
        &__title
            @extends $clear-block
            position relative
            font 500 30px/1 'Open Sans', sans-serif
            display block
            width 100%
            margin 0 0 20px
            padding 0 2em
            color #666
            
            &-left, &-right
                position relative
                display block
                
            &-right
                font 700 .6em/22px 'Open Sans', sans-serif
                
        &__row
            display table
            width 100%
            
        &__cell
            display table-cell
            vertical-align top
            padding 20px 30px
            max-width 240px
            
            &:last-of-type
                border-left solid 1px #ccc
                
        &__buttons
            text-align right
            
    .ps-product-page__image
        max-width 240px
        margin auto
        
    .b-image-block
        @extends $imageBlock

.ps-popup-content__ajax
    padding 20px 0
        
    .ps-features
        padding 0 0 20px
        
        &__title
            font-size 22px
            
    .ps-feature
        @extends $clear-block
        display block
        position relative
        font-size 14px
        margin 0 0 1em
        white-space nowrap
        
        &::before
            content ''
            absolute left 0 bottom 4px width 100%
            border-bottom dotted 2px #666
            z-index 0
        
        &__title, &__value
            display inline-block
            position relative
            float left
            background-color #fff
            color #777
            padding 0 10px 0 0
            z-index 1
            
        &__value
            float right
            padding 0 0 0 10px
            
    .ps-price
        padding 0 1em 0 0
        &__value
            display inline-block
            font-size 36px
            font-weight 700
            line-height 1
            padding 0 0 .25em
            
            em
                font-size .8em

            &--old
                font-size 24px
                font-weight 400
                padding 0
                position relative
                color #888

                &::before
                    content ''
                    display block
                    absolute top 50% left 0 width 100% height 2px
                    background-color #ec1818
                    transform rotate(-10deg)

        &__discount
            font-size 30px
            font-weight 700
            color red
            padding 0 0 0 1em
            
        &__block
            padding 20px 0
            white-space normal
        
        &__descripts
            padding 0 0 0 30px
            
        &__descript
            font-size 14px
            
            &:first-of-type
                font-weight 700
            
    .ps-product
        &__row
            display table
            width 100%
        
        &__cell
            display table-cell
            vertical-align top
            &--left
                padding 0 20px 0 0
                width 56%
            &--image
                width 250px
                
        &__options
            padding 20px 0
            white-space nowrap
            
        &__option
            display block
            font-size 16px
            padding 0 0 5px
            
            &--checked
                position relative
                padding 0 0 1em 1.5em
                
                &::before
                    content ''
                    display block
                    absolute left 0 top .3em width 1em height .6em
                    border solid green
                    border-width 0 0 2px 2px 
                    transform rotate(-45deg)
            
            &::after
                content ''
                display table
                clear both
                
        &__controls
            background-color #eee
            padding 20px
            margin 30px 0 0
            white-space nowrap
            
        &__control
            &:last-child
                padding 2px 0 0
                            
        &__quantity
            display inline-block
            position relative
            width 75%
            
            &::after
                content ''
                display table
                clear both
                
        &__compare
            display inline-block
            font 14px/1 'Open Sans', sans-serif
            text-transform uppercase
            color #888
            
            &.checked
                color #47b347
                
        &__button
            @extends $form-button
            font 14px/30px 'Open Sans', sans-serif
            text-align center
            text-transform uppercase
            text-decoration none
            height auto
            padding 5px 20px
            margin 0 0 0 10px

            &:hover
                background-color #ed9d12
                text-decoration none
            
    .ps-option
        &__title
            display inline-block
            font-weight 700
            color #555
            width 50%
        
        &__value
            font-weight 700
            color #222
        
    .ps-quantity
        &__title
            display inline-block
            text-align center
            
        &__button
            @extends $form-button
            absolute top 0 width 15px height 20px
            font 800 12px/20px 'Open Sans', sans-serif
            display block
            transition .5s all ease
            z-index 1
            
            &--dec, &--decbox
                border-radius 5px 0 0 5px
                left -2px
                    
            &--inc, &--incbox
                border-radius 0 5px 5px 0
                right -2px
                
        &:hover, &--focus
            .ps-quantity__button
                &--dec, &--decbox
                    left -15px
                    
                &--inc, &--incbox
                    right -15px
            
        &__value
            position relative
            display block
            font 800 14px/20px 'Open Sans', sans-serif
            text-align center
            size 100% 20px
            margin 0
            border solid 1px #f1b347
            z-index 2