.ps-more-info
    display block
    padding 30px 0
    
    &__tabs
        @extends $clear-block
        padding 0
        
    &__tab
        display block
        padding 10px 
        border-top solid 2px transparent
        float left
        font-size 20px
        cursor pointer
        
        &:focus, &:active, &:hover
            border-top solid 2px #f1b347
            
    &__switcher
        display none
        
    &__content
        display none
        
        ~/__switcher:checked + &
            display block
            
    &__features, &__description
        font-size 16px
        color #555
        
        p
            padding 0
            line-height 2
        
    &__feature
        position relative
        margin 0 0 1em
        
        &::before
            content ''
            absolute bottom 3px left 0 width 100%
            border-bottom dotted 4px #555
            z-index 0
            
        &-name, &-value
            display inline-block
            position relative
            background-color #fff
            z-index 1
            
        &-name
            padding 0 1em 0 0
            
        &-value
            position absolute
            right 0
            padding 0 0 0 1em
            color #555
            
            a&
                text-decoration underline
            
        